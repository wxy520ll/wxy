<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
>
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="添加巡逻段"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#428bcb"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_height="45dp"
            android:background="@color/bg_dark"
            android:orientation="horizontal">
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                android:layout_weight="0.4"
                style="@style/collection_information_tv"
                android:text="班次名称"/>

        <EditText
                android:hint="如：早班"
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:maxLength="20"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider_horizontal_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_height="45dp"
            android:background="@color/bg_dark"
            android:orientation="horizontal"
    >
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                android:layout_weight="0.4"
                style="@style/collection_information_tv"
                android:text="开始时间"/>

        <TextView
                android:hint="如：8:00"
                android:id="@+id/tv_kssj"
                android:layout_width="0dp"
                android:maxLength="20"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider_horizontal_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_height="45dp"
            android:background="@color/bg_dark"
            android:orientation="horizontal"
    >
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                android:layout_weight="0.4"
                style="@style/collection_information_tv"
                android:text="结束时间"/>

        <TextView
                android:hint="如：12:00"
                android:id="@+id/tv_jssj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider_horizontal_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_height="45dp"
            android:background="@color/bg_dark"
            android:orientation="horizontal"
    >
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                android:layout_weight="0.4"
                style="@style/collection_information_tv"
                android:text="时长（小时）"/>

        <EditText
                android:hint="请输入时长"
                android:id="@+id/et_sc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:maxLength="4"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider_horizontal_line"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="45dp"
                android:text="取消"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:background="#428bcb"
                android:textColor="@android:color/white"
        />

        <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:text="添加"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:background="#428bcb"
                android:textColor="@android:color/white"
        />
    </LinearLayout>
</LinearLayout>