<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_45"
    android:background="@color/blue"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/item_kb_search"
        android:layout_toRightOf="@id/tv_cancel"
        android:background="@drawable/shapeselect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/shop_goods_search"/>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="点位名称"
            android:id="@+id/item_kb_keywords"
            android:imeOptions="actionSearch"
            android:padding="3dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="14sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_department"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:visibility="gone"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8"
        android:drawableRight="@drawable/more"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/item_kb_search"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
</LinearLayout>