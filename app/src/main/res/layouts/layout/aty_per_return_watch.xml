<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark"
        >

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    style="@style/collection_information_linerlayout">
                <TextView
                        android:layout_height="match_parent"
                        style="@style/collection_information_tv"
                        android:text="@string/per_bfrxm"
                        android:drawableRight="@drawable/imporent"
                        />
                <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        style="@style/tv_search_bg"
                        android:enabled="false"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    style="@style/collection_information_linerlayout">
                <TextView
                        android:layout_height="match_parent"
                        style="@style/collection_information_tv"
                        android:text="@string/per_sfz"
                        android:drawableRight="@drawable/imporent"
                        />

                <EditText
                        android:id="@+id/et_sfz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:maxLength="18"
                        style="@style/tv_search_bg"
                        android:enabled="false"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    style="@style/collection_information_linerlayout">
                <TextView
                        android:layout_height="match_parent"
                        style="@style/collection_information_tv"
                        android:text="@string/per_dzh"
                        />

                <EditText
                        android:id="@+id/et_dzh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:maxLength="25"
                        android:enabled="false"
                        style="@style/tv_search_bg"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/collection_information_linerlayout"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/imporent"
                        style="@style/collection_information_tv"
                        android:text="经纬度坐标"/>

                <TextView
                        android:id="@+id/tv_zb"
                        android:layout_width="0dp" android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        style="@style/tv_search_bg"
                        android:enabled="false"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    style="@style/collection_information_linerlayout">
                <TextView
                        android:layout_height="match_parent"
                        style="@style/collection_information_tv"
                        android:text="@string/bz"
                        />

                <EditText
                        android:id="@+id/et_bz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:maxLength="25"
                        android:enabled="false"
                        style="@style/tv_search_bg"
                        android:background="@android:color/background_light"
                        android:layout_weight="1"/>
            </LinearLayout>



            <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_5"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="@dimen/space_35"
                    android:layout_width="match_parent"
                    android:text="@string/pzjl"
                    android:background="@color/bg_dark"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_120"
                    android:paddingTop="@dimen/space_5"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal">

                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:layout_marginLeft="@dimen/space_1"
                              android:layout_height="match_parent"
                              android:orientation="vertical">

                    <ImageView
                            android:id="@+id/iv_lyqj"
                            android:layout_width="@dimen/space_100"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:background="@drawable/dr_camear"
                            />
                    <TextView
                            android:layout_width="@dimen/space_100"
                            android:layout_height="0dp"
                            android:text="人员全身照"
                            android:drawableRight="@drawable/imporent"
                            android:textSize="@dimen/text_size_12"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@android:color/background_light"
                            android:layout_weight="0.2"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@+id/ll_boom"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@android:color/background_light"
            style="@style/collection_information_linerlayout">

        <Button
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/del"
                android:background="@android:color/holo_orange_dark"
                android:layout_marginLeft="0.5dp"
                android:textColor="@android:color/white"
        />

    </LinearLayout>


</RelativeLayout>