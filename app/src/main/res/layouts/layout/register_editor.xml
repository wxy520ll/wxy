<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
              xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="390dp"
              android:background="@color/bg_dark"
              android:orientation="vertical" >

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider_horizontal_line" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">

            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:text="手机号码"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:layout_marginRight="2dp"
                      android:textSize="@dimen/text_size_12"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:inputType="phone"
                    android:paddingLeft="20dp" />
        </LinearLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:text="姓名"
                      android:layout_height="match_parent"/>

            <EditText
                    android:visibility="gone"
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请填写姓名"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="身份标识"
                      android:layout_marginRight="2dp"
                      android:textSize="@dimen/text_size_12"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_sfbs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />

        </LinearLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="警号"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>

            <EditText
                    android:visibility="gone"
                    android:id="@+id/et_jhnumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:hint="请输入警号"
                    android:paddingLeft="20dp" />

            <TextView
                    android:id="@+id/tv_jhnumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:paddingLeft="20dp" />

        </LinearLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />




        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="派出所或直属单位"
                      android:layout_marginRight="2dp"
                      android:textSize="@dimen/text_size_12"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_pcs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />
        </LinearLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="警务室"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_jws"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />
        </LinearLayout>


        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="街道"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_jd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />
        </LinearLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="社区"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_sq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />
        </LinearLayout>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="1.3"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:gravity="center_vertical"
                      android:paddingLeft="12dp"
                      android:text="网格"
                      android:textSize="@dimen/text_size_12"
                      android:layout_marginRight="2dp"
                      android:background="@android:color/background_light"
                      android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/tv_wg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent" />
        </LinearLayout>



    </LinearLayout>




    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.15"
                  android:orientation="horizontal"
                  android:layout_marginTop="2dp"
                  android:background="@android:color/background_light"
            >
        <Button
                android:id="@+id/btn_modeify"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="@string/btn_modeify"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_15"
                android:background="@color/blue" />
    </LinearLayout>
</LinearLayout>