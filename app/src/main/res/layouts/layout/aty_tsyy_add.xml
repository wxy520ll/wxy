<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:orientation="horizontal"
        android:background="@color/blue">

        <TextView
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="提审预约"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_qx"
            android:text="X"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/space_10"
            android:textSize="@dimen/text_size_16"
            android:layout_width="@dimen/space_0"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:drawableRight="@drawable/imporent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:text="房间编号"/>

        <TextView
            android:id="@+id/tv_fjbh"
            android:layout_width="0dp"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            style="@style/tv_search_bg"
            android:background="@android:color/background_light"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:drawableRight="@drawable/imporent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:text="房间名称"/>

        <TextView
            android:id="@+id/tv_fjmc"
            android:layout_width="0dp"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            style="@style/tv_search_bg"
            android:background="@android:color/background_light"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:drawableRight="@drawable/imporent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:text="房间面积"/>

        <TextView
            android:id="@+id/tv_fjmj"
            android:layout_width="0dp"
            android:maxLength="20"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            style="@style/tv_search_bg"
            android:background="@android:color/background_light"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:drawableRight="@drawable/imporent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:text="房间描述"/>

        <TextView
            android:id="@+id/tv_fjms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            style="@style/tv_search_bg"
            android:background="@android:color/background_light"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line"/>


    <TextView
        android:layout_height="@dimen/space_35"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_8"
        android:background="@color/bg_dark"
        android:text="预约时段"/>

    <LinearLayout
        android:id="@+id/ll_sw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yylx1"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="9:00"
            android:textSize="@dimen/text_size_11"
            android:background="@color/bg_dark"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/btn_yylx2"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="10:00"
            android:textSize="@dimen/text_size_11"
            android:background="@color/bg_dark"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/btn_yylx3"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="11:00"
            android:background="@color/bg_dark"
            android:textSize="@dimen/text_size_11"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_xw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yylx4"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="14:00"
            android:textSize="@dimen/text_size_11"
            android:background="@color/bg_dark"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/btn_yylx5"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="15:00"
            android:textSize="@dimen/text_size_11"
            android:background="@color/bg_dark"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/btn_yylx6"
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:text="16:00"
            android:background="@color/bg_dark"
            android:textSize="@dimen/text_size_11"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

</LinearLayout>