<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginBottom="1dp"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/space_8"
              android:paddingBottom="@dimen/space_8"
              android:layout_height="match_parent"
              android:background="@color/white"
>
    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView android:id="@+id/plc_xh"
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:textColor="@color/bbutton_danger"/>
        <TextView android:id="@+id/plc_bx_unionNo"
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:singleLine="true"
                  android:textColor="@color/text_black"/>
        <TextView android:id="@+id/plc_bx_linkMan"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_black"/>
        <TextView android:id="@+id/plc_bx_address"
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:textColor="@color/text_black"/>
        <TextView
                android:id="@+id/tv_duty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_5"
                android:textSize="@dimen/text_size_14"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"/>

        <TextView
                android:id="@+id/tv_gz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:gravity="center_vertical"
                android:textColor="@color/text_dark"/>

    </LinearLayout>


    <LinearLayout android:layout_width="60dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

    </LinearLayout>
</LinearLayout>