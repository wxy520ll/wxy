<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--LinearLayout 第一层布局  -->
        <LinearLayout
            style="@style/collect_first_linear">
            <!--LinearLayout 第二层布局右边采集类提示  -->
            <LinearLayout
                style="@style/collect_left_linear">
                <!--TextView 右边菜单-->
                <TextView
                    style="@style/collect_left_import_text"
                    android:text="申请人姓名"/>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>
            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:id="@+id/tv_sqrxm"
                    style="@style/collect_right_text"
                    />
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>
        </LinearLayout>


        <!--LinearLayout 第一层布局  -->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_gly"
            android:layout_height="wrap_content"
            style="@style/collect_first_linear">
            <!--LinearLayout 第二层布局右边采集类提示  -->
            <LinearLayout
                style="@style/collect_left_linear">
                <!--TextView 右边菜单-->
                <TextView
                    style="@style/collect_left_import_text"
                    android:text="@string/machine_gly"/>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>
            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:id="@+id/tv_gly"
                    style="@style/collect_right_text"
                    />
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>
        </LinearLayout>




        <!--LinearLayout 第一层布局  -->
        <LinearLayout
            style="@style/collect_first_linear">
            <!--LinearLayout 第二层布局右边采集类提示  -->
            <LinearLayout
                style="@style/collect_left_linear">
                <!--TextView 右边菜单-->
                <TextView
                    style="@style/collect_left_import_text"
                    android:text="申请人手机号码"/>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>
            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:id="@+id/tv_sqrsjhm"
                    style="@style/collect_right_text"
                    />
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>
        </LinearLayout>


        <!--LinearLayout 第一层布局  -->
        <LinearLayout
            style="@style/collect_first_linear">
            <!--LinearLayout 第二层布局右边采集类提示  -->
            <LinearLayout
                style="@style/collect_left_linear">
                <!--TextView 右边菜单-->
                <TextView
                    style="@style/collect_left_import_text"
                    android:text="申请人身份证号码"/>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>
            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:id="@+id/tv_sqrsfz"
                    style="@style/collect_right_text"
                    />
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--LinearLayout 第一层布局  -->
        <LinearLayout
            style="@style/collect_first_linear">
            <!--LinearLayout 第二层布局右边采集类提示  -->
            <LinearLayout
                style="@style/collect_left_linear">
                <!--TextView 右边菜单-->
                <TextView
                    style="@style/collect_left_import_text"
                    android:text="申请人所属单位"/>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>
            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:id="@+id/tv_sqrssdw"
                    style="@style/collect_right_text"
                    />
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/space_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_150"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingTop="@dimen/space_20"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_fj1"
                    android:layout_width="@dimen/space_100"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dr_camear"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="个人正脸照片"
                    android:drawableRight="@drawable/imporent"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center"
                    android:background="@android:color/background_light"
                    android:layout_weight="0.2"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定申请"
            android:layout_marginLeft="0.5dp"
            android:layout_height="@dimen/space_50"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_light"
            />
    </LinearLayout>

</RelativeLayout>
