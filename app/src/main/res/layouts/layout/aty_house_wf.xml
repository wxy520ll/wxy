<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--分类标题  物防  -->
    <TextView
        style="@style/collect_lb_title"
        android:text="@string/house_wf"/>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_wf"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--第一层LinerLayout  -->
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/collect_radiogroup_linerlayout"
            android:orientation="horizontal"
            >
            <LinearLayout
                style="@style/collect_left_linear_radio">
                <!--RadioGroup   -->
                <RadioGroup
                    android:id="@+id/rg_sffdm"
                    android:layout_width="match_parent"
                    style="@style/collect_radiogroup"
                    >
                    <!--RadioButton   -->
                    <RadioButton
                        android:id="@+id/rb_sffdm_0"
                        android:text="@string/YES"
                        style="@style/collect_radiobutton" />
                    <RadioButton
                        android:id="@+id/rb_sffdm_1"
                        android:text="@string/NO"
                        style="@style/collect_radiobutton" />
                </RadioGroup>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>

            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                android:layout_weight="0.3"
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    style="@style/collection_information_tv"
                    android:text="@string/house_sffdm"/>
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--第一层LinerLayout  -->
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/collect_radiogroup_linerlayout"
            android:orientation="horizontal"
            >
            <LinearLayout
                style="@style/collect_left_linear_radio">
                <!--RadioGroup   -->
                <RadioGroup
                    android:id="@+id/rg_sfbjs"
                    android:layout_width="match_parent"
                    style="@style/collect_radiogroup"
                    >
                    <!--RadioButton   -->
                    <RadioButton
                        android:id="@+id/rb_sfbjs_0"
                        android:text="@string/YES"
                        style="@style/collect_radiobutton" />
                    <RadioButton
                        android:id="@+id/rb_sfbjs_1"
                        android:text="@string/NO"
                        style="@style/collect_radiobutton" />
                </RadioGroup>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>

            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                android:layout_weight="0.3"
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    style="@style/collection_information_tv"
                    android:text="@string/house_sfbjs"/>
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--第一层LinerLayout  -->
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/collect_radiogroup_linerlayout"
            android:orientation="horizontal"
            >
            <LinearLayout
                style="@style/collect_left_linear_radio">
                <!--RadioGroup   -->
                <RadioGroup
                    android:id="@+id/rg_sfazpc"
                    android:layout_width="match_parent"
                    style="@style/collect_radiogroup"
                    >
                    <!--RadioButton   -->
                    <RadioButton
                        android:id="@+id/rb_sfazpc_0"
                        android:text="@string/YES"
                        style="@style/collect_radiobutton" />
                    <RadioButton
                        android:id="@+id/rb_sfazpc_1"
                        android:text="@string/NO"
                        style="@style/collect_radiobutton" />
                </RadioGroup>
                <!--TextView  底部线 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_short_blue"/>
            </LinearLayout>

            <!--LinearLayout 第二层布局左边采集  -->
            <LinearLayout
                android:layout_weight="0.3"
                style="@style/collect_right_linear">
                <!--EditText  左边输入框-->
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    style="@style/collection_information_tv"
                    android:text="@string/house_sfpc"/>
                <!--TextView 左边输入框底部线条 -->
                <TextView
                    style="@style/collect_left_bottom"
                    android:background="@drawable/line_long_blue"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_wf_qt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:paddingTop="@dimen/space_5"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wf"
                android:layout_width="@dimen/space_100"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/dr_camear"
                />
            <TextView
                android:layout_width="@dimen/space_100"
                android:layout_height="0dp"
                android:text="物防图片"
                android:drawableRight="@drawable/imporent"
                android:textSize="@dimen/text_size_12"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/background_light"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>