<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--LinearLayout 第一层布局  -->
    <LinearLayout
        style="@style/collect_first_linear">
        <!--LinearLayout 第二层布局右边采集类提示  -->
        <LinearLayout
            style="@style/collect_left_linear">
            <!--TextView 右边菜单-->
            <TextView
                style="@style/collect_left_import_text"
                android:text="@string/organname"/>
            <!--TextView  底部线 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_short_blue"/>
        </LinearLayout>
        <!--LinearLayout 第二层布局左边采集  -->
        <LinearLayout
            style="@style/collect_right_linear">
            <!--EditText  左边输入框-->
            <TextView
                android:id="@+id/tv_pcs"
                android:maxLength="10"
                android:hint="请选择需要派出所"
                style="@style/collect_right_text"
                />
            <!--TextView 左边输入框底部线条 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_long_blue"
                />
        </LinearLayout>
    </LinearLayout>

    <!--LinearLayout 第一层布局  -->
    <LinearLayout
        style="@style/collect_first_linear">
        <!--LinearLayout 第二层布局右边采集类提示  -->
        <LinearLayout
            style="@style/collect_left_linear">
            <!--TextView 右边菜单-->
            <TextView
                style="@style/collect_left_import_text"
                android:text="@string/machine_name"/>
            <!--TextView  底部线 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_short_blue"/>
        </LinearLayout>
        <!--LinearLayout 第二层布局左边采集  -->
        <LinearLayout
            style="@style/collect_right_linear">
            <!--EditText  左边输入框-->
            <TextView
                android:id="@+id/tv_jf"
                android:hint="请选择机房"
                style="@style/collect_right_text"
                />
            <!--TextView 左边输入框底部线条 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_long_blue"
                />
        </LinearLayout>
    </LinearLayout>

    <!--LinearLayout 第一层布局  -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_gly"
        android:layout_height="wrap_content"
        style="@style/collect_first_linear">
        <!--LinearLayout 第二层布局右边采集类提示  -->
        <LinearLayout
            style="@style/collect_left_linear">
            <!--TextView 右边菜单-->
            <TextView
                style="@style/collect_left_import_text"
                android:text="@string/machine_gly"/>
            <!--TextView  底部线 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_short_blue"/>
        </LinearLayout>
        <!--LinearLayout 第二层布局左边采集  -->
        <LinearLayout
            style="@style/collect_right_linear">
            <!--EditText  左边输入框-->
            <TextView
                android:id="@+id/tv_gly"
                style="@style/collect_right_text"
                />
            <!--TextView 左边输入框底部线条 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_long_blue"
                />
        </LinearLayout>
    </LinearLayout>


    <!--LinearLayout 第一层布局  -->
    <LinearLayout
        android:id="@+id/ll_logintime"
        android:visibility="gone"
        style="@style/collect_first_linear">
        <!--LinearLayout 第二层布局右边采集类提示  -->
        <LinearLayout
            style="@style/collect_left_linear">
            <!--TextView 右边菜单-->
            <TextView
                style="@style/collect_left_import_text"
                android:text="@string/machine_room_time"/>
            <!--TextView  底部线 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_short_blue"/>
        </LinearLayout>
        <!--LinearLayout 第二层布局左边采集  -->
        <LinearLayout
            style="@style/collect_right_linear">
            <!--EditText  左边输入框-->
            <TextView
                android:id="@+id/tv_logintime"
                style="@style/collect_right_text"
                />
            <!--TextView 左边输入框底部线条 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_long_blue"
                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_height="@dimen/space_40"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_12"
        android:background="@color/bg_dark"
        android:paddingLeft="@dimen/space_5"
        android:gravity="center_vertical"
        android:text="图片认证"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_1"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/space_100"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_60"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_sfz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/dr_camear"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="手持身份证"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:background="@android:color/background_light"
                android:layout_weight="0.16"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="@dimen/space_100"
            android:layout_marginRight="@dimen/space_60"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_jf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/dr_camear" />
            <TextView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="机房门口全景图"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:background="@android:color/background_light"
                android:layout_weight="0.16"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_boom"
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/space_50">
        <Button
            android:id="@+id/btn_ks"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/machine_room_enter"
            android:layout_marginLeft="0.5dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_light"
            />
    </LinearLayout>

</LinearLayout>
