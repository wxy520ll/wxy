<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_dark">

    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >

        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:text="@string/za_jksbh"/>

        <EditText
               android:enabled="false"
                android:id="@+id/et_jksbh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="50"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  style="@style/collection_information_linerlayout"
                  android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:drawableRight="@drawable/imporent"
                android:text="@string/store_sxtzs"/>


        <EditText
                android:id="@+id/et_sxtzs"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="50"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:drawableRight="@drawable/imporent"
                android:text="@string/store_sxtzc"/>


        <EditText
                android:id="@+id/et_sxtzcs"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="50"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:text="@string/store_mksxts"/>

        <EditText
                android:id="@+id/et_mksxts"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="50"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="@dimen/space_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginRight="@dimen/space_20"
                      android:layout_marginLeft="@dimen/space_60"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView
                    android:id="@+id/iv_jkpm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dr_camear"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/store_jkpm"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_weight="0.16"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_60"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_sxtqjt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/dr_camear"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="摄像头全景图"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center"
                    android:background="@android:color/background_light"
                    android:layout_weight="0.16"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>