<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--分类标题   消防 -->
    <TextView
        style="@style/collect_lb_title"
        android:text="@string/house_xf"/>


    <LinearLayout
        android:id="@+id/ll_xf"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--第一层LinerLayout  -->
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/collect_radiogroup_linerlayout"
        android:orientation="horizontal"
        >
        <LinearLayout
            style="@style/collect_left_linear_radio">
            <!--RadioGroup   -->
            <RadioGroup
                android:id="@+id/rg_sfxfqc"
                android:layout_width="match_parent"
                style="@style/collect_radiogroup"
                >
                <!--RadioButton   -->
                <RadioButton
                    android:id="@+id/rb_sfxfqc_0"
                    android:text="@string/YES"
                    style="@style/collect_radiobutton" />
                <RadioButton
                    android:id="@+id/rb_sfxfqc_1"
                    android:text="@string/NO"
                    style="@style/collect_radiobutton" />
            </RadioGroup>
            <!--TextView  底部线 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_short_blue"/>
        </LinearLayout>

        <!--LinearLayout 第二层布局左边采集  -->
        <LinearLayout
            android:layout_weight="0.3"
            style="@style/collect_right_linear">
            <!--EditText  左边输入框-->
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                style="@style/collection_information_tv"
                android:text="@string/house_sfxf"/>
            <!--TextView 左边输入框底部线条 -->
            <TextView
                style="@style/collect_left_bottom"
                android:background="@drawable/line_long_blue"
                />
        </LinearLayout>

    </LinearLayout>


