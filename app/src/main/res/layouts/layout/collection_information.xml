<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_dark"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


        <ImageView android:layout_width="match_parent"
                   android:layout_height="@dimen/space_85"
                   android:layout_marginTop="@dimen/space_5"
                   android:layout_marginLeft="@dimen/space_15"
                   android:layout_marginRight="@dimen/space_15"
                   android:background="@drawable/top_main_jks"/>

        <LinearLayout
                android:id="@+id/ll_jks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_75"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
        >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dr_jks"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_20"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_45"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/jks"
                                android:textColor="@color/text_black"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_18"
                                android:layout_height="0dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/jks_tips"
                                android:textColor="@color/text_dark"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_12"
                                android:layout_height="0dp"/>

                </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_sxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_75"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
        >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dr_sxt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_20"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_45"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/sxt"
                                android:textColor="@color/text_black"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_18"
                                android:layout_height="0dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/sxt_tips"
                                android:textColor="@color/text_dark"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_12"
                                android:layout_height="0dp"/>

                </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_manage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_75"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
        >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dr_jks_gl"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_20"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_45"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/info_manage"
                                android:textColor="@color/text_black"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_18"
                                android:layout_height="0dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/info_manage_tips"
                                android:textColor="@color/text_dark"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_12"
                                android:layout_height="0dp"/>

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_total"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_75"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
        >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dr_jks_tj"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_20"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_45"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/info_total"
                                android:textColor="@color/text_black"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_18"
                                android:layout_height="0dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/info_total_tips"
                                android:textColor="@color/text_dark"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_12"
                                android:layout_height="0dp"/>

                </LinearLayout>
        </LinearLayout>
  <LinearLayout
                android:id="@+id/ll_check"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_75"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
        >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dr_total"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/space_20"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_45"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/info_total"
                                android:textColor="@color/text_black"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_18"
                                android:layout_height="0dp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/plate_count_tips"
                                android:textColor="@color/text_dark"
                                android:background="@drawable/bg_onclick"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/space_20"
                                android:textSize="@dimen/text_size_12"
                                android:layout_height="0dp"/>

                </LinearLayout>
        </LinearLayout>

</LinearLayout>