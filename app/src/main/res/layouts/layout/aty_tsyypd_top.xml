<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/space_160">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/space_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tsyy_pd_top" />

        <LinearLayout
            android:layout_width="@dimen/space_0"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_pdbh"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:layout_height="@dimen/space_0"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_height="@dimen/space_0">

                <TextView
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="前面还有"
                    android:textSize="@dimen/text_big12_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pdrs"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/red"
                    />


                <TextView
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="人"
                    android:textSize="@dimen/text_big12_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_height="@dimen/space_0">

                <TextView
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="排队总数"
                    android:textSize="@dimen/text_big12_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_pdzs"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/red"
                    />


                <TextView
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="人"
                    android:textSize="@dimen/text_big12_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/space_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0"
                android:layout_weight="0.4"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_sx"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_big12_size"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_orage_point"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_12"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="刷新"
                    />

                <TextView
                    android:id="@+id/tv_qxpd"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_red_point"
                    android:textSize="@dimen/text_big12_size"
                    android:layout_marginRight="@dimen/space_10"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="取消排队"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/textview_fill_width"/>


    <TextView
        android:layout_width="match_parent"
        android:background="@color/bg_dark"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        android:textSize="@dimen/text_size_12"
        android:text="排队记录" />




</LinearLayout>