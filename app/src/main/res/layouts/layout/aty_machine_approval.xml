<include layout="@layout/textview_fill_width"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="@dimen/space_0"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_12"
                        android:text="同行人员信息"
                        android:textSize="@dimen/text_size_12"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_menu_add"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv_addfollow"
                        android:text="增加同行人员"
                        android:background="@color/blue"
                        android:src="@drawable/ic_menu_add"
                        android:textSize="@dimen/text_size_12"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_height="match_parent"
                        android:layout_width="@dimen/space_0"
                        android:layout_weight="0.15"/>
                </LinearLayout>

                <include layout="@layout/textview_fill_width"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:orientation="vertical"
                    android:gravity="center">

                    <cn.net.xinyi.xmjt.utils.View.LinearLayoutForListView
                        android:id="@+id/lv_follow_person"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </cn.net.xinyi.xmjt.utils.View.LinearLayoutForListView>

                </LinearLayout>
            </LinearLayout>


