<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.15"
            android:background="@android:color/background_light"
            android:gravity="center_vertical"
            android:text="1.修改资料"
            android:textColor="#428bcb"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_weight="0.2"
            android:background="@android:color/background_light"
            android:gravity="center_vertical"
            android:text="2.重新登录"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <com.xinyi_tech.comm.widget.picker.SuperImageView
            android:id="@+id/simg_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            app:sImgFrameWidth="5dp"
            app:sImgSupporCrop="true"
            app:sImgSupportBigImage="false" />
    </FrameLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/divider_horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_police"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="手机号码"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="姓名"
                    android:textSize="@dimen/text_size_12" />


                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="身份标识"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_sfbs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <LinearLayout
                android:id="@+id/ll_jh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="警号"
                    android:textSize="@dimen/text_size_12" />

                <EditText
                    android:id="@+id/et_jhnumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <LinearLayout
                android:id="@+id/ll_sfz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="身份证号码"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_sfzh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />


            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="所属分局"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_fj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="派出所或直属单位"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_pcs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="警务室"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_jws"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="街道"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_jd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:hint="请选择所属街道"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="社区"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_sq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:hint="请选择所属社区"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="网格"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_wg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:hint="请选择所属网格"
                    android:maxLines="10"
                    android:paddingLeft="20dp"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_modeify"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_40"
        android:background="@color/blue"
        android:text="修改完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>