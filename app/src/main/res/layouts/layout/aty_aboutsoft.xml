<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="#ffc8c8c8"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10"
                android:background="@color/bg_dark"
                android:textSize="@dimen/text_size_12"
                android:text="软件信息" />

            <RelativeLayout android:layout_width="match_parent"
                android:layout_margin="@dimen/about_text_vertical_space"
                android:layout_height="@dimen/space_45">
                <TextView android:textSize="@dimen/common_textsize_mid"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff000000"
                    android:id="@+id/txt_SoftName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_app_name"/>
                <TextView android:textSize="@dimen/common_textsize_small"
                    android:layout_below="@+id/txt_SoftName"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff676767"
                    android:id="@+id/txt_SoftNameD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/about_text_vertical_space"
                    android:text="@string/app_name"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/about_text_vertical_space"
                android:layout_height="@dimen/space_45">

                <TextView
                    android:textSize="@dimen/common_textsize_mid"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff000000"
                    android:id="@+id/txt_Version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_app_version"/>
                <TextView

                    android:layout_below="@+id/txt_Version"
                    android:textSize="@dimen/common_textsize_small"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff676767"
                    android:id="@+id/txt_VersionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/about_text_vertical_space"
                    android:text="@string/app_version"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/about_text_vertical_space"
                android:layout_height="@dimen/space_45">

                <TextView
                    android:id="@+id/name_company"
                    android:textSize="@dimen/common_textsize_mid"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_app_copyright"/>
                <TextView android:textSize="@dimen/common_textsize_small"
                    android:layout_below="@+id/name_company"
                    android:paddingLeft="10.0dip"
                    android:textColor="#ff676767"
                    android:id="@+id/txt_copyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/about_text_vertical_space"
                    android:text="@string/app_copyright"/>


            </RelativeLayout>

            <TextView android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10"
                android:background="@color/bg_dark"
                android:textSize="@dimen/text_size_12"
                android:text="软件下载（注：点击二维码可分享）"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_apk"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_10"
                    android:textSize="@dimen/text_size_12"
                    />
                <TextView
                    android:id="@+id/tv_copyapk"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/space_10"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:text="复制"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_ercode"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ercode"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10"
                android:background="@color/bg_dark"
                android:textSize="@dimen/text_size_12"
                android:text="操作手册下载（注：可用QQ、微信扫描下载查看）"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_pdf"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_10"
                    android:textSize="@dimen/text_size_12"
                    />
                <TextView
                    android:id="@+id/tv_copypdf"
                    android:layout_width="@dimen/space_0"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/space_10"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:text="复制"/>
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ergudie"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
