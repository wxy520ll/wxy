<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/ll_top"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light">
        <TextView android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="1.手机号码验证"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/space_10"
            android:gravity="center_vertical"
            android:background="@android:color/background_light"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_tips_info"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:textSize="15sp"
            android:text="2.填写个人资料"
            android:textColor="#428bcb"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@android:color/background_light"
            android:layout_height="match_parent"/>

        <TextView android:layout_width="0dp"
            android:layout_weight="0.2"
            android:text="3.登录"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@android:color/background_light"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:id="@+id/line_top"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_below="@id/ll_top"
        android:background="@drawable/divider_horizontal_line"/>
    <ScrollView
        android:id="@+id/sv_collection"
        android:layout_below="@id/line_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:text="手机号码"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:inputType="phone"
                    />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:text="姓名*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请填写姓名"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="身份标识*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/spin_sfbs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:hint="请选择身份标识"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="警号*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/et_jhnumber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_12"
                    android:maxLength="6"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:hint="请输入警号(民警必须录入)"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="密码*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/edt_UsrPwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:hint="@string/msg_login_pwd"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="密码确认*"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/edt_UsrPwdRe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:hint="@string/msg_login_pwd_confirm"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="派出所用户，若无归属警务室请选择其他"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="所属分局*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/spin_fj"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:hint="请选择所属分局"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>
  <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="派出所或直属单位*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/spin_pcs"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请选择派出所"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="警务室*"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/spin_jws"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请选择警务室"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="综管员必须选择所属街道、社区、网格，网格可以多选"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="街道"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_jd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:hint="请选择所属街道"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_input_text_height"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="社区"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_sq"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:hint="请选择所属社区"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/register_input_text_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:singleLine="false"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:text="网格"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/background_light"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_wangge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:hint="请选择所属网格"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/divider_horizontal_line"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:background="@android:color/background_light"
                >
                <Button
                    android:id="@+id/btn_Register"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_register"
                    android:textColor="@android:color/white"
                    android:background="@color/blue"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>