<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_75"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:background="@drawable/top_main_safe"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_kpi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dr_kpi"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_20"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_55"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_onclick">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/kpi"
                            android:textColor="@color/text_black"
                            android:background="@drawable/bg_onclick"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/space_20"
                            android:textSize="@dimen/text_size_18"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="数字证书学习、考核"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_onclick"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_20"
                        android:textSize="@dimen/text_size_12"
                        android:layout_height="0dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_oncecamera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dr_oneuser"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_20"
                    android:id="@+id/imageView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_55"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_onclick">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/oncecamera"
                            android:textColor="@color/text_black"
                            android:background="@drawable/bg_onclick"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/space_20"
                            android:textSize="@dimen/text_size_18"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="网络信息安全考核、学习，机房管理"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_onclick"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_20"
                        android:textSize="@dimen/text_size_12"
                        android:layout_height="0dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_enterandexit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="horizontal"
                android:background="@drawable/bg_onclick"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dr_oneuser"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_55"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_onclick">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_onclick">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/entryandexitapproval"
                            android:textColor="@color/text_black"
                            android:background="@drawable/bg_onclick"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/space_20"
                            android:textSize="@dimen/text_size_18"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="龙岗分局出入证申请"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_onclick"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_20"
                        android:textSize="@dimen/text_size_12"
                        android:layout_height="0dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>