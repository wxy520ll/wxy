<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="提示"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#428bcb"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:textSize="@dimen/text_14sp"
            android:text="请核对或完善您的身份证号码信息后，再进行数字证书的学习"/>

    </LinearLayout>

    <include layout="@layout/textview_fill_width"/>>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_height="45dp"
        android:background="@color/bg_dark"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:drawableRight="@drawable/imporent"
            android:layout_weight="0.4"
            style="@style/collection_information_tv"
            android:text="@string/per_sfzh"/>

        <EditText
            android:hint="请输入身份证号码"
            android:id="@+id/ed_sfz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:maxLength="18"
            android:inputType="number"
            android:digits="0123456789xX"
            style="@style/tv_search_bg"
            android:background="@android:color/background_light"
            android:layout_weight="1"/>
    </LinearLayout>


    <include layout="@layout/textview_fill_width"/>

</LinearLayout>