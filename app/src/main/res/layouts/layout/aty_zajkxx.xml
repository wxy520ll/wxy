<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_dark">




    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >


        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:text="@string/za_jksbh"/>

        <EditText
                android:hint="请输入监控室编号"
                android:id="@+id/et_jksbh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="30"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  style="@style/collection_information_linerlayout"
                  android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                style="@style/collection_information_tv"
                android:text="@string/store_sxtzs"/>


        <EditText
                android:id="@+id/et_sxtzs"
                android:hint="请输入摄像头总数"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="5"
               android:inputType="number"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                android:drawableRight="@drawable/imporent"
                style="@style/collection_information_tv"
                android:text="@string/store_sxtzc"/>


        <EditText
                android:id="@+id/et_sxtzcs"
                android:hint="请输入摄像头正常数"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="5"
                android:inputType="number"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            style="@style/collection_information_linerlayout"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_height="match_parent"
                style="@style/collection_information_tv"
                android:text="@string/store_mksxts"/>

        <EditText
                android:id="@+id/et_mksxts"
                android:hint="请输入门口摄像头数"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:maxLength="5"
                android:inputType="number"
                style="@style/tv_search_bg"
                android:background="@android:color/background_light"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="@dimen/space_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_130"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginRight="@dimen/space_10"
                      android:layout_marginLeft="@dimen/space_50"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView
                    android:id="@+id/iv_jkpm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/dr_camear"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/store_jkpm"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:background="@android:color/background_light"
                    android:layout_weight="0.16"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_sxtqjt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/dr_camear"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="摄像头全景图"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center"
                    android:background="@android:color/background_light"
                    android:layout_weight="0.16"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="@dimen/space_1"
            android:id="@+id/ll_save"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/space_45"
            android:layout_alignParentBottom="true"
            >

        <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="采集完成"
                android:textSize="@dimen/text_size_15"
                android:background="#428bcb"
                android:textColor="@android:color/white"
                />

    </LinearLayout>

</LinearLayout>