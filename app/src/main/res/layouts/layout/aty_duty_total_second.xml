<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_dark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="fill_parent"
            android:text="开始时间:"
            style="@style/tv_search_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:hint="请选择开始时间"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="20dp"
            style="@style/search_bg"
            android:id="@+id/tv_start_date"/>
    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="fill_parent"
            android:text="结束时间:"
            style="@style/tv_search_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:hint="请结束时间"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="20dp"
            style="@style/search_bg"
            android:id="@+id/tv_end_date"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="fill_parent"
            android:text="巡段级别:"
            style="@style/tv_search_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="全部"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="20dp"
            style="@style/search_bg"
            android:id="@+id/tv_beatlevel"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        >
        <TextView
            android:id="@+id/tv_dw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="单位"
            android:textSize="@dimen/space_12"
            android:textColor="@color/text_color_black"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <include layout="@layout/textview_full_height"></include>


        <TextView
            android:id="@+id/tv_xldzs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="巡段总数"
            android:textSize="@dimen/space_12"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            />
        <include layout="@layout/textview_full_height"></include>


        <TextView
            android:id="@+id/tv_qdxs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="巡逻人数"
            android:textSize="@dimen/space_12"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            />
        <include layout="@layout/textview_full_height"></include>


        <TextView
            android:id="@+id/tv_xlgls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="巡逻总里程(KM)"
            android:textSize="@dimen/space_12"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            />
    </LinearLayout>
    <include layout="@layout/textview_fill_width"/>
</LinearLayout>