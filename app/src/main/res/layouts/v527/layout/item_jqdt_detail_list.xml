<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xinyi_tech.comm.form.FormLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:comm_fieldDivided="false"
        app:comm_fieldMinHeight="48dp"
        app:comm_formDivided="false"
        app:comm_labelBgColor="@color/comm_white">

        <com.xinyi_tech.comm.form.FieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:comm_contentType="TYPE_TEXTVIEW"
            app:comm_field_name="ABMC"
            app:comm_label_name="案别/案由" />

        <com.xinyi_tech.comm.form.FieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:comm_contentType="TYPE_TEXTVIEW"
            app:comm_field_name="FASJCZ"
            app:comm_label_name="发案时间" />

        <com.xinyi_tech.comm.form.FieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:comm_contentType="TYPE_TEXTVIEW"
            app:comm_field_name="AJSSJQMC"
            app:comm_label_name="所属警区" />

        <com.xinyi_tech.comm.form.FieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:comm_contentType="TYPE_TEXTVIEW"
            app:comm_field_name="ZYAQ"
            app:comm_label_name="简要案情" />

        <com.xinyi_tech.comm.form.FieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:comm_contentType="TYPE_TEXTVIEW"
            app:comm_field_name="FADD"
            app:comm_label_name="发案地点详址" />
    </com.xinyi_tech.comm.form.FormLayout>
</LinearLayout>