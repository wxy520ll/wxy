<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.net.xinyi.xmjt.v527.widget.FlexibleViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/comm_grey100"
        app:tl_iconHeight="23dp"
        app:tl_iconWidth="23dp"
        app:tl_indicator_color="@color/comm_lightBlue100"
        app:tl_indicator_corner_radius="0dp"
        app:tl_indicator_height="0dp"
        app:tl_indicator_margin_top="0dp"
        app:tl_indicator_style="BLOCK"
        app:tl_textSelectColor="#2C97DE"
        app:tl_textUnselectColor="#66000000"
        app:tl_textsize="12sp"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="1dp" />
</LinearLayout>
