<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_line"
    android:orientation="vertical">


    <com.allen.library.SuperTextView
        android:id="@+id/stv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:sBackgroundDrawableRes="@drawable/icon_main_head"
        app:sDividerLineType="none"
        app:sLeftBottomTextColor="@color/white"
        app:sLeftBottomTextSize="12sp"
        app:sLeftBottomTextString="龙岗所-梅刚警务室-梅刚警格"
        app:sLeftIconHeight="60dp"
        app:sLeftIconMarginLeft="20dp"
        app:sLeftIconRes="@drawable/app_icon"
        app:sLeftIconShowCircle="true"
        app:sLeftIconWidth="60dp"
        app:sLeftTextColor="@color/white"
        app:sLeftTextSize="14sp"
        app:sLeftTextString="张三"
        app:sLeftViewGravity="left_center"
        app:sLeftViewMarginLeft="20dp"
        app:sRightIconHeight="40dp"
        app:sRightIconMarginRight="20dp"
        app:sRightIconWidth="40dp"
        app:sUseRipple="true" />


    <LinearLayout
        android:id="@+id/ll_jfpm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llqd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/comm_orange"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_main_qd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="签到"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lljf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_jf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="积分"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2545"
                android:textColor="@color/green"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:background="@color/divide_line"></View>

        <LinearLayout
            android:id="@+id/llpm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_pm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="排名"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2545"
                android:textColor="@color/green"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>